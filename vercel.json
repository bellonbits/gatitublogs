{
    "version": 2,
    "builds": [
        {
            "src": "server.ts",
            "use": "@vercel/node"
        },
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/py/:path*",
            "destination": "/api/index.py"
        },
        {
            "source": "/api/:path*",
            "destination": "/server.ts"
        },
        {
            "source": "/((?!api|assets|favicon.ico|architect.jpeg).*)",
            "destination": "/index.html"
        }
    ]
}